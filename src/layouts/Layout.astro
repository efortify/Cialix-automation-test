      :root {
        --primary_color: #46e699;
        --accent_color: #ff6422;
      }

      /* Prevent transitions during page load to avoid mounting effect */
      * {
        transition: none !important;
        animation: none !important;
      }

      /* Ultra-aggressive header stability */
      html body header,
      html body header *,
      html body header .container-xl,
      html body header .flex,
      html body header nav,
      html body header a {
        transform: none !important;
        transition: none !important;
        animation: none !important;
        position: static !important;
        left: auto !important;
        right: auto !important;
        margin-left: auto !important;
        margin-right: auto !important;
      }

      /* Re-enable transitions after page load */
      .page-loaded * {
        transition: initial !important;
        animation: initial !important;
      }

      /* Ensure header is stable during page load */
      header {
        opacity: 1 !important;
        transform: none !important;
        position: fixed !important;
        top: 0 !important;
        left: 0 !important;
        right: 0 !important;
        width: 100% !important;
        z-index: 50 !important;
        visibility: visible !important;
        display: block !important;
      }

      /* Prevent navigation from sliding */
      nav,
      .nav,
      .navbar {
        transform: none !important;
        transition: none !important;
        animation: none !important;
        position: static !important;
      }

      /* Prevent any flexbox animations */
      .flex,
      .d-flex {
        transition: none !important;
        animation: none !important;
      }

      /* Prevent container animations */
      .container,
      .container-xl,
      .container-fluid {
        transform: none !important;
        transition: none !important;
        animation: none !important;
      }

      /* Prevent any sliding animations */
      *[class*='slide'],
      *[class*='translate'],
      *[class*='transform'] {
        transform: none !important;
        transition: none !important;
        animation: none !important;
      }

      /* Specifically target navigation elements */
      header nav,
      header .nav,
      header .navbar,
      header .flex,
      header .d-flex,
      header .container,
      header .container-xl {
        transform: none !important;
        transition: none !important;
        animation: none !important;
        left: auto !important;
        right: auto !important;
        margin-left: auto !important;
        margin-right: auto !important;
      }

      /* Prevent any translateX animations that might cause sliding */
      header *,
      nav *,
      .navbar * {
        transform: none !important;
        transition: none !important;
        animation: none !important;
      }

      /* Ensure navigation items are properly positioned */
      header .flex > * {
        transform: none !important;
        transition: none !important;
        animation: none !important;
        position: static !important;
      }

      /* Prevent any horizontal sliding specifically */
      header,
      header *,
      nav,
      nav *,
      .container-xl,
      .flex {
        transform: translateX(0) !important;
        transform: translateY(0) !important;
        transform: translateZ(0) !important;
        transform: translate3d(0, 0, 0) !important;
        left: auto !important;
        right: auto !important;
        margin-left: auto !important;
        margin-right: auto !important;
        position: static !important;
