---
export interface Props {
  id: string;
  title: string;
  copy: string;
}
const { id, title, copy } = Astro.props;
---

<div
  id={id}
  class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-60 transition-opacity duration-300 invisible opacity-0 pointer-events-none"
  tabindex="-1"
  aria-modal="true"
  role="dialog"
>
  <div
    class="relative bg-white rounded-3xl shadow-2xl max-w-2xl w-full px-8 py-10 md:px-16 md:py-14 flex flex-col items-center animate-modal-open"
  >
    <button
      type="button"
      class="absolute top-6 right-6 text-gray-400 hover:text-gray-700 text-3xl font-bold focus:outline-none close-modal transition-colors duration-200"
      aria-label="Close"
    >
      <span class="sr-only">Close</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-8 w-8"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
    <h2
      class="text-3xl md:text-4xl font-extrabold mb-4 text-center text-gray-900"
    >
      {title}
    </h2>
    <p class="text-lg md:text-xl text-gray-700 text-center leading-relaxed">
      {copy}
    </p>
  </div>
</div>
<style>
  .modal-open {
    opacity: 1 !important;
    pointer-events: auto !important;
    visibility: visible !important;
  }
  @keyframes modalOpen {
    0% {
      opacity: 0;
      transform: scale(0.95) translateY(30px);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
  .animate-modal-open {
    animation: modalOpen 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>
