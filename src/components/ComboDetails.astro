---
import * as comboDetails from '../content/combo-details.md';

const { title, subtitle, benefits, products_included, why_combo, cta } =
  comboDetails.frontmatter;
---

<section class="bg-gray-50 py-16">
  <div class="container mx-auto px-4">
    <!-- Combo Benefits Section -->
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4">{title}</h2>
      <p class="text-xl text-gray-600">{subtitle}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      {
        benefits.map((benefit: any) => (
          <div class="text-center">
            <div
              class={`bg-${benefit.color}-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4`}
            >
              <img
                src={`/assets/icons/${benefit.icon}`}
                alt={benefit.title}
                class="w-8 h-8"
              />
            </div>
            <h3 class="text-xl font-bold mb-2">{benefit.title}</h3>
            <p class="text-gray-600">{benefit.description}</p>
          </div>
        ))
      }
    </div>

    <!-- Combo Products Section -->
    <div class="bg-white rounded-lg p-8 mb-16">
      <h3 class="text-3xl font-bold text-center mb-8">
        {products_included.title}
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h4 class="text-xl font-semibold mb-4">
            {products_included.cialix.title}
          </h4>
          <ul class="space-y-3 mb-6">
            {
              products_included.cialix.benefits.map((benefit: string) => (
                <li class="flex items-start">
                  <span class="text-pink-500 mr-3">✓</span>
                  <div>{benefit}</div>
                </li>
              ))
            }
          </ul>

          <h4 class="text-xl font-semibold mb-4">
            {products_included.testorx.title}
          </h4>
          <ul class="space-y-3 mb-6">
            {
              products_included.testorx.benefits.map((benefit: string) => (
                <li class="flex items-start">
                  <span class="text-pink-500 mr-3">✓</span>
                  <div>{benefit}</div>
                </li>
              ))
            }
          </ul>

          <h4 class="text-xl font-semibold mb-4">
            {products_included.climaxin.title}
          </h4>
          <ul class="space-y-3">
            {
              products_included.climaxin.benefits.map((benefit: string) => (
                <li class="flex items-start">
                  <span class="text-pink-500 mr-3">✓</span>
                  <div>{benefit}</div>
                </li>
              ))
            }
          </ul>
        </div>
        <div>
          <h4 class="text-xl font-semibold mb-4">{why_combo.title}</h4>
          <p class="text-gray-600 mb-4">{why_combo.description}</p>
          <p class="text-gray-600 mb-4">{why_combo.additional_info}</p>
          <p class="text-gray-600">{why_combo.savings}</p>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="text-center">
      <h3 class="text-3xl font-bold mb-4">{cta.title}</h3>
      <p class="text-xl text-gray-600 mb-8">{cta.subtitle}</p>
      <a
        href="#add-to-cart"
        class={`bg-${cta.button_color}-500 hover:bg-${cta.button_color}-600 text-white px-8 py-3 rounded-lg font-bold text-lg transition-colors`}
      >
        {cta.button_text}
      </a>
    </div>
  </div>
</section>

